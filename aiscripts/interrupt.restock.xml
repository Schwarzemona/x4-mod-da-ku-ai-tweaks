<?xml version='1.0' encoding='utf-8'?>
<diff>
  <!--
    =========================================
    limit l and xl ships going to repair to 1
    =========================================
    search for $kAAIT_lxl_repair_queue

    <handler name="ResupplyHandler">
        <conditions>
          <event_object_signalled object="this.ship" param="'resupply'"/>
          <check_value value="not this.assignedcontrolled.isunit"/>
          <check_value value="@this.assignedcontrolled.trueowner.doesresupply"/>
  -->
  <add sel="//handler[@name=&quot;ResupplyHandler&quot;]/conditions">
	<check_any>
		<check_all>
			<check_value value="not this.assignedcontrolled.isclass.[class.ship_l, class.ship_xl]" />
			<!-- <debug_text text="@this.assignedcontrolled.idcode + ' $kAAIT_lxl_repair_queue: ok to repair? yes, not lxl'" debugchance="if @$debugchance then $debugchance else (if @this.assignedcontrolled.idcode == @global.$kAAIT.$debugChance_idCode or @global.$kAAIT.$debugChance_idCode == 'all' then @global.$kAAIT_Data.$debugChance else 0)" /> -->
		</check_all>
		<check_all>
			<check_value value="not @this.assignedcontrolled.commander.exists" />
			<!-- <debug_text text="@this.assignedcontrolled.idcode + ' $kAAIT_lxl_repair_queue: ok to repair? no commander'" debugchance="if @$debugchance then $debugchance else (if @this.assignedcontrolled.idcode == @global.$kAAIT.$debugChance_idCode or @global.$kAAIT.$debugChance_idCode == 'all' then @global.$kAAIT_Data.$debugChance else 0)" /> -->
		</check_all>
		<check_all>
			<check_value value="not global.$kAAITByShipId.{'$' + @this.assignedcontrolled.idcode}?" />
			<!-- <debug_text text="@this.assignedcontrolled.idcode + ' $kAAIT_lxl_repair_queue: ok to repair? yes, not kuda-controlled'" debugchance="if @$debugchance then $debugchance else (if @this.assignedcontrolled.idcode == @global.$kAAIT.$debugChance_idCode or @global.$kAAIT.$debugChance_idCode == 'all' then @global.$kAAIT_Data.$debugChance else 0)" /> -->
		</check_all>
		<check_all>
			<check_value value="not global.$kAAITByShipId.{'$' + @this.assignedcontrolled.commander.idcode}?" />
			<!-- <debug_text text="@this.assignedcontrolled.idcode + ' $kAAIT_lxl_repair_queue: ok to repair? yes, commander is not kuda-controlled'" debugchance="if @$debugchance then $debugchance else (if @this.assignedcontrolled.idcode == @global.$kAAIT.$debugChance_idCode or @global.$kAAIT.$debugChance_idCode == 'all' then @global.$kAAIT_Data.$debugChance else 0)" /> -->
		</check_all>
		<check_all>
			<debug_text text="@this.assignedcontrolled.idcode + ' $kAAIT_lxl_repair_queue: ok to repair? proceed if repair queue is free. $kAAIT_lxl_repair_queue: ' + @global.$kAAITByShipId.{'$' + @this.assignedcontrolled.commander.idcode}.$kAAIT_lxl_repair_queue" debugchance="if @$debugchance then $debugchance else (if @this.assignedcontrolled.idcode == @global.$kAAIT.$debugChance_idCode or @global.$kAAIT.$debugChance_idCode == 'all' then @global.$kAAIT_Data.$debugChance else 0)" />
			<check_value value="not @global.$kAAITByShipId.{'$' + @this.assignedcontrolled.commander.idcode}.$kAAIT_lxl_repair_queue.exists" />
			<set_value name="global.$kAAITByShipId.{'$' + @this.assignedcontrolled.idcode}.$kAAIT_lxl_repair_queue" exact="this.assignedcontrolled" />
			<set_value name="global.$kAAITByShipId.{'$' + @this.assignedcontrolled.commander.idcode}.$kAAIT_lxl_repair_queue" exact="this.assignedcontrolled" />
			<debug_text text="@this.assignedcontrolled.idcode + ' $kAAIT_lxl_repair_queue: ok to repair? yes, repair queue is free. $kAAIT_lxl_repair_queue: ' + @global.$kAAITByShipId.{'$' + @this.assignedcontrolled.commander.idcode}.$kAAIT_lxl_repair_queue" debugchance="if @$debugchance then $debugchance else (if @this.assignedcontrolled.idcode == @global.$kAAIT.$debugChance_idCode or @global.$kAAIT.$debugChance_idCode == 'all' then @global.$kAAIT_Data.$debugChance else 0)" />
		</check_all>
	</check_any>
  </add>
</diff>
